<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/20.0.1"
            fx:controller="healthe_logininterface.PostProblemController"
            prefHeight="400.0" prefWidth="500.0"
            style="-fx-background-color: #f0f8ff;">

    <children>
        <Label layoutX="140.0" layoutY="20.0" text="Post a Problem"
               style="-fx-font-size: 22px; -fx-text-fill: #333;">
            <font>
                <Font size="22.0" />
            </font>
        </Label>

        <TextField fx:id="titleField" layoutX="100.0" layoutY="80.0" promptText="Problem Title"
                   prefWidth="300.0" />

        <TextArea fx:id="descriptionField" layoutX="100.0" layoutY="130.0"
                  prefWidth="300.0" prefHeight="150.0" promptText="Describe your symptoms..." />

        <Button layoutX="180.0" layoutY="300.0" text="Submit"
                fx:id="submitButton" onAction="#submitProblem"
                style="-fx-background-color: #3399ff; -fx-text-fill: white; -fx-font-weight: bold;" />

        <Hyperlink layoutX="190.0" layoutY="350.0" text="← Back to Dashboard" onAction="#goBack" />
    </children>
</AnchorPane>
