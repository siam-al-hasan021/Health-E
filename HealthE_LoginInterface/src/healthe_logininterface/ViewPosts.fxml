<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane prefHeight="400.0" prefWidth="650.0"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/20.0.1"
            fx:controller="healthe_logininterface.ViewPostsController"
            style="-fx-background-color: #f0f8ff;">
    <children>
        <Label layoutX="20.0" layoutY="20.0" text="All Posts and Replies"
               style="-fx-font-size: 20px; -fx-font-weight: bold;" />
        <TableView fx:id="postsTable" layoutX="20.0" layoutY="60.0" prefWidth="610.0" prefHeight="240.0">
            <columns>
                <TableColumn fx:id="emailCol" text="User Email" prefWidth="150.0"/>
                <TableColumn fx:id="titleCol" text="Title" prefWidth="150.0"/>
                <TableColumn fx:id="descCol" text="Description" prefWidth="160.0"/>
                <TableColumn fx:id="replyCol" text="Doctor's Reply" prefWidth="150.0"/>
            </columns>
        </TableView>
        <Button layoutX="70.0" layoutY="320.0" text="✏️ Edit Post"
                fx:id="editButton"
                onAction="#editSelectedPost"
                style="-fx-background-color: #ffa500; -fx-text-fill: white; -fx-background-radius: 10;" />
        <Button layoutX="180.0" layoutY="320.0" text="🗑 Delete Post"
                fx:id="deleteButton"
                onAction="#deleteSelectedPost"
                style="-fx-background-color: #ff4444; -fx-text-fill: white; -fx-background-radius: 10;" />
        <Button layoutX="290.0" layoutY="320.0" text="Go Back"
                onAction="#goBack"
                style="-fx-background-color: #3399ff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" />
    </children>
</AnchorPane>
