<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="750.0" prefWidth="1200.0" style="-fx-background-color: #e6f2ff;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="healthe_logininterface.DashboardController">
    <children>

        <!-- Logo -->
        <ImageView fitHeight="140.0" fitWidth="126.0" layoutX="537.0" layoutY="14.0">
            <image>
                <Image url="@../images/HEALTHEE.png" />
            </image>
        </ImageView>

        <!-- Welcome -->
        <Label fx:id="welcomeLabel" layoutX="456.0" layoutY="142.0" prefHeight="38.0" prefWidth="288.0" style="-fx-font-size: 26px; -fx-font-weight: bold;" />

        <!-- Post Problem -->
        <Button fx:id="postProblemButton" layoutX="450.0" layoutY="250.0" onAction="#goToPostProblem" prefHeight="60.0" prefWidth="300.0" style="-fx-background-color: #3399ff; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 12;" text="📝 Post a Problem" />

        <!-- View Posts -->
        <Button fx:id="viewPostsButton" layoutX="450.0" layoutY="340.0" onAction="#goToViewPosts" prefHeight="60.0" prefWidth="300.0" style="-fx-background-color: #66cc66; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 12;" text="📄 View Your Posts" />

        <!-- Logout -->
        <Button fx:id="logoutButton" layoutX="550.0" layoutY="459.0" onAction="#logout" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #ff4d4d; -fx-text-fill: white; -fx-background-radius: 10;" text="🚪 Logout" />
    </children>
</AnchorPane>
