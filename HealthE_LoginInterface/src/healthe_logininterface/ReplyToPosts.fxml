<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="healthe_logininterface.ReplyToPostsController"
            prefHeight="500.0" prefWidth="700.0"
            style="-fx-background-color: #f9f9f9;">
    <children>
        <Label layoutX="20.0" layoutY="20.0" text="All Posts"
               style="-fx-font-size: 20px; -fx-font-weight: bold;" />
        <TableView fx:id="postsTable" layoutX="20.0" layoutY="60.0" prefWidth="660.0" prefHeight="250.0">
            <columns>
                <TableColumn fx:id="emailCol" text="User Email" prefWidth="150.0" />
                <TableColumn fx:id="titleCol" text="Title" prefWidth="200.0" />
                <TableColumn fx:id="descCol" text="Description" prefWidth="180.0" />
                <TableColumn fx:id="replyCol" text="Reply" prefWidth="130.0" />
            </columns>
        </TableView>
        <Label layoutX="20.0" layoutY="330.0" text="Your Reply:" style="-fx-font-size: 16px;" />
        <TextArea fx:id="replyField" layoutX="20.0" layoutY="360.0" prefWidth="660.0" prefHeight="60.0" />
        <Button text="Submit Reply" layoutX="160.0" layoutY="440.0"
                onAction="#submitReply"
                style="-fx-background-color: #3399ff; -fx-text-fill: white; -fx-background-radius: 10;" />
        <Button text="✏️ Edit Reply" layoutX="300.0" layoutY="440.0"
                onAction="#editReply"
                style="-fx-background-color: #ffa500; -fx-text-fill: white; -fx-background-radius: 10;" />
        <Button text="🗑 Delete Reply" layoutX="430.0" layoutY="440.0"
                onAction="#deleteReply"
                style="-fx-background-color: #ff4444; -fx-text-fill: white; -fx-background-radius: 10;" />
    </children>
</AnchorPane>