<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="healthe_logininterface.DoctorDashboardController"
            prefHeight="300.0" prefWidth="500.0"
            style="-fx-background-color: #f0f8ff;">

    <children>
        <Label fx:id="doctorLabel" layoutX="50.0" layoutY="30.0" text="Welcome, Doctor!"
               style="-fx-font-size: 22px; -fx-font-weight: bold;" />

        <Button fx:id="viewPostsButton" layoutX="150.0" layoutY="100.0" text="View Posts & Reply"
                onAction="#goToReplyPage"
                style="-fx-background-color: #3399ff; -fx-text-fill: white; -fx-background-radius: 10;" />
    </children>
</AnchorPane>
