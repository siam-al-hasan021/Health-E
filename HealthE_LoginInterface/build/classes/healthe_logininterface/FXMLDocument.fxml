<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="250" prefWidth="350"
            style="-fx-background-color: #cce6ff;"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/20.0.1"
            fx:controller="healthe_logininterface.FXMLDocumentController">

   <children>
      <Label layoutX="40.0" layoutY="20.0" text="Login to Health-E" textFill="#003366">
         <font>
            <Font name="Lucida Fax Demibold" size="22.0" />
         </font>
      </Label>

      <TextField fx:id="usernameField" layoutX="80.0" layoutY="70.0" promptText="Email"
                 style="-fx-background-radius: 10; -fx-padding: 8; -fx-font-size: 14;" />

      <PasswordField fx:id="passwordField" layoutX="80.0" layoutY="115.0" promptText="Password"
                     style="-fx-background-radius: 10; -fx-padding: 8; -fx-font-size: 14;" />

      <Button fx:id="loginButton" layoutX="120.0" layoutY="160.0" text="Login"
              onAction="#handleLogin"
              style="-fx-background-color: #3399ff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" />

      <Hyperlink fx:id="signupLink" layoutX="90.0" layoutY="200.0"
                 text="Donâ€™t have an account? Sign up"
                 onAction="#goToSignup" />
   </children>
</AnchorPane>
