<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="750.0" prefWidth="1200.0" style="-fx-background-color: #f0f8ff;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="healthe_logininterface.PostProblemController">

<children>
    <!-- Logo -->
    <ImageView fitHeight="150.0" fitWidth="150.0" layoutX="532.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../images/HEALTHEE.png" />
        </image>
    </ImageView>

    <!-- Heading -->
    <Label layoutX="442.0" layoutY="164.0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #003366;" text="📝 Post a Health Problem" />

    <!-- Title -->
    <TextField fx:id="titleField" layoutX="157.0" layoutY="231.0" prefWidth="900.0" promptText="Problem Title" style="-fx-font-size: 16px;" />

    <!-- Description -->
    <TextArea fx:id="descriptionField" layoutX="157.0" layoutY="284.0" prefHeight="300.0" prefWidth="900.0" promptText="Describe your symptoms or health issue..." style="-fx-font-size: 16px;" wrapText="true" />

    <!-- Submit Button -->
    <Button fx:id="submitButton" layoutX="507.0" layoutY="602.0" onAction="#submitProblem" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #3399ff; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10;" text="Submit" />

    <!-- Back Link -->
    <Hyperlink layoutX="533.0" layoutY="663.0" onAction="#goBack" style="-fx-font-size: 16px;" text=" Back to Dashboard" />
</children>
</AnchorPane>
